{
  "extends": [
    "airbnb",
    "plugin:jasmine/recommended"
  ],
  "parser": "babel-eslint",
  "plugins": [
    "jest",
    "jasmine"
  ],
  "env": {
    "browser": true,
    "node": true,
    "jasmine": true,
    "jest": true
  },
  "ecmaFeatures": {
    "jsx": true,
    "es6": true,
    "classes": true
  },
  "globals": {
  },
  "rules": {
     "comma-dangle": [1, "always-multiline"],
     "no-underscore-dangle" : 0,
     "max-len": [1, 180, 4],
     "arrow-body-style": [0],
     "react/jsx-no-bind": [0],
     "import/no-extraneous-dependencies": [0], // Not an issue
     "react/jsx-filename-extension": [0], // Ok... JS works for us well
     "import/no-named-as-default": [0],
     "react/self-closing-comp": [0],
     "no-plusplus": [0],
     "react/prefer-stateless-function": [1],
     "import/prefer-default-export": [0],
     "import/no-unresolved": [0] // Until import plugin supports webpack 2 resolveModules
  }
}
